# AnchorLayout:
#     anchor_x: 'center'
#     anchor_y: 'center'
# on_active: app.theme_cls.theme_style = 'Dark' if self.active else 'Light'

# --------------------- Mobile --------------------

<MobileView>
    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(10)
        MDCard:
            md_bg_color: 0, 0, 1, .1
            spacing: dp(10)
            padding: dp(10)
            MDBoxLayout:
                MDLabel:
                    text: app.usd
                    halign: "center"
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    MDTextField:
                        mode: "rectangle"
                        max_text_length: 10
                        id: text_mobile
                        input_filter: 'int'

        MDBoxLayout:
            MDLabel:
                text: app.btc
                halign: "center"
            MDLabel:
                id: btc_text

        MDBoxLayout:
            MDLabel:
                text: app.trx
                halign: "center"
            MDLabel:
                id: trx_text

        MDBoxLayout:
            MDLabel:
                text: app.eth
                halign: "center"
            MDLabel:
                id: eth_text

        MDBoxLayout:
            MDLabel:
                text: app.dog
                halign: "center"
            MDLabel:
                id: dog_text

        MDCard:
            md_bg_color: 0, 1, 0, .1
            MDBoxLayout:
                spacing: dp(10)
                padding: dp(10)
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    MDRaisedButton:
                        text: app.cnt
                        on_release: root.count_button()
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    MDRectangleFlatButton:
                        id: source_button
                        text: app.src
                        on_release: root.source_button()
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    MDRectangleFlatButton:
                        text: app.info
                        on_release: app.info_button()


# --------------------- Tablet ----------------------

<TabletView>
    MDBoxLayout:
        orientation: 'horizontal'

        MDCard:
            md_bg_color: 0, 0, 0, .05
            radius: 0
            size_hint_x: .5

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(10)
            padding: dp(10)
            MDCard:
                md_bg_color: 0, 0, 1, .1
                spacing: dp(10)
                padding: dp(10)
                MDBoxLayout:
                    MDLabel:
                        text: app.usd
                        halign: "center"
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'center'
                        MDTextField:
                            mode: "rectangle"
                            max_text_length: 10
                            id: text_tablet
                            input_filter: 'int'
            MDBoxLayout:
                MDLabel:
                    text: app.btc
                    halign: "center"
                MDLabel:
                    id: btc_text_tablet

            MDBoxLayout:
                MDLabel:
                    text: app.trx
                    halign: "center"
                MDLabel:
                    id: trx_text_tablet

            MDBoxLayout:
                MDLabel:
                    text: app.eth
                    halign: "center"
                MDLabel:
                    id: eth_text_tablet

            MDBoxLayout:
                MDLabel:
                    text: app.dog
                    halign: "center"
                MDLabel:
                    id: dog_text_tablet

            MDCard:
                md_bg_color: 0, 1, 0, .1
                MDBoxLayout:
                    spacing: dp(10)
                    padding: dp(10)
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'center'
                        MDRaisedButton:
                            text: "Count"
                            on_release: root.count_button()
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'center'
                        MDRectangleFlatButton:
                            id: source_button
                            text: app.src
                            on_release: root.source_button()
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'center'
                        MDRectangleFlatButton:
                            text: app.info
                            on_release: app.info_button()
        MDBoxLayout:
            size_hint_x: .5
            MDCard:
                md_bg_color: 0, 0, 0, .05
                radius: 0


